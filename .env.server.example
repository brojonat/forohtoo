# Server Configuration
SERVER_ADDR=:8080
LOG_LEVEL=info
FOROHTOO_SERVER_URL=http://localhost:8080

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@postgres:5432/forohtoo?sslmode=disable

# NATS Configuration (for SSE streaming)
NATS_URL=nats://nats:4222

# Solana Configuration - Mainnet
SOLANA_MAINNET_RPC_URL=https://api.mainnet-beta.solana.com
USDC_MAINNET_MINT_ADDRESS=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# Solana Configuration - Devnet
SOLANA_DEVNET_RPC_URL=https://api.devnet.solana.com
USDC_DEVNET_MINT_ADDRESS=4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU

# Temporal Configuration
TEMPORAL_HOST=temporal:7233
TEMPORAL_NAMESPACE=forohtoo
TEMPORAL_TASK_QUEUE=forohtoo-wallet-polling

# Payment Gateway Configuration
# Set to "true" to require payment before wallet registration
PAYMENT_GATEWAY_ENABLED=false

# Service wallet address to receive registration payments
# Create a new Solana wallet for production use
PAYMENT_GATEWAY_SERVICE_WALLET=YourServiceWalletAddress123456789012345

# Network for the service wallet (mainnet or devnet)
PAYMENT_GATEWAY_SERVICE_NETWORK=mainnet

# Registration fee amount in lamports (1 SOL = 1,000,000,000 lamports)
# Example: 1000000 = 0.001 SOL (approximately $0.10-0.20 depending on SOL price)
PAYMENT_GATEWAY_FEE_AMOUNT=1000000

# Asset type for payment: "sol" or "spl-token"
PAYMENT_GATEWAY_FEE_ASSET_TYPE=sol

# SPL Token mint address (required if FEE_ASSET_TYPE is "spl-token")
# Example for USDC: EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v
# PAYMENT_GATEWAY_FEE_TOKEN_MINT=

# How long users have to complete payment (e.g., "24h", "48h")
PAYMENT_GATEWAY_PAYMENT_TIMEOUT=24h

# Memo prefix for payment identification (must be unique to your service)
PAYMENT_GATEWAY_MEMO_PREFIX=forohtoo-reg:
