# Server Configuration
SERVER_ADDR=:8080
LOG_LEVEL=info
FOROHTOO_SERVER_URL=http://localhost:8080

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@postgres:5432/forohtoo?sslmode=disable

# NATS Configuration (for SSE streaming)
NATS_URL=nats://nats:4222

# Solana RPC Configuration
# Use comma-separated lists to distribute load across multiple endpoints
# Mix free public endpoints with paid services to avoid rate limits and reduce costs

# Mainnet endpoints - mix of free and paid for cost optimization
# Example with multiple endpoints (uncomment and add your API keys):
# SOLANA_MAINNET_RPC_URLS=https://api.mainnet-beta.solana.com,https://mainnet.helius-rpc.com/?api-key=YOUR_KEY,https://rpc.ankr.com/solana,https://solana.rpcpool.com
SOLANA_MAINNET_RPC_URLS=https://api.mainnet-beta.solana.com
USDC_MAINNET_MINT_ADDRESS=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# Devnet endpoints - typically free public endpoints are sufficient
SOLANA_DEVNET_RPC_URLS=https://api.devnet.solana.com
USDC_DEVNET_MINT_ADDRESS=4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU

# Temporal Configuration
TEMPORAL_HOST=temporal:7233
TEMPORAL_NAMESPACE=forohtoo
TEMPORAL_TASK_QUEUE=forohtoo-wallet-polling

# Payment Gateway Configuration
# All payments are in USDC (uses USDC mint address configured above based on network)
# Set to "true" to require USDC payment before wallet registration
PAYMENT_GATEWAY_ENABLED=false

# Service wallet address to receive USDC registration payments
# Create a new Solana wallet for production use
PAYMENT_GATEWAY_SERVICE_WALLET=YourServiceWalletAddress123456789012345

# Network for the service wallet (mainnet or devnet)
# Must match one of the networks configured above
PAYMENT_GATEWAY_SERVICE_NETWORK=mainnet

# Registration fee amount in USDC base units (USDC has 6 decimals)
# Examples:
#   1000000 = 1 USDC
#   5000000 = 5 USDC
# 100000 = 0.1 USDC
PAYMENT_GATEWAY_FEE_AMOUNT=1000000

# How long users have to complete payment before invoice expires
# Examples: "1h", "24h", "48h"
PAYMENT_GATEWAY_PAYMENT_TIMEOUT=24h

# Memo prefix for payment identification (must be unique to your service)
# Actual memo will be: prefix + invoice_id
PAYMENT_GATEWAY_MEMO_PREFIX=forohtoo-reg:

